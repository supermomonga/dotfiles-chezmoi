# Machine-global config

[tools]
# Runtime
bun = "latest"
deno = "latest"
go = "latest"
node = "latest"
python = "latest"
rust = "latest"
zig = "latest"
lua = "5.1" # for Neovim compatibility

# Tools
chezmoi = "latest"
neovim = "latest"
fzf = "latest"
uv = "latest"
tree-sitter = "latest"
yazi = "latest"
starship = "latest"

# Packages
"cargo:pik" = "latest"
"go:github.com/babarot/gomi" = "latest"
"go:github.com/k1LoW/git-wt" = "latest"
"go:github.com/Warashi/cage" = "latest"
"go:github.com/x-motemen/ghq" = "latest"
"pipx:llmstxt2skill" = "latest"
"pipx:edge-tts" = "latest"


{{ if ne .chezmoi.os "windows" }}
"github:sijiaoh/pockode" = "latest"
{{ end }}

[settings]
trusted_config_paths = [
    "~/ghq",
]

[settings.npm]
package_manager = "bun"

[env]
# v3.13.0 broken now https://github.com/luarocks/luarocks/issues/1851
LUAROCKS_VERSION = "3.12.2"
