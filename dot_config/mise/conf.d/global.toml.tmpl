# Machine-global config

[tools]
# Runtime
bun = "latest"
deno = "latest"
go = "latest"
node = "latest"
python = "latest"
rust = "latest"
zig = "latest"

# Tools
chezmoi = "latest"
neovim = "latest"
fzf = "latest"
uv = "latest"

# Packages
"cargo:pik" = "latest"
"go:github.com/babarot/gomi" = "latest"
"go:github.com/k1LoW/git-wt" = "latest"
"go:github.com/x-motemen/ghq" = "latest"
"npm:happy-coder" = "latest"
"pipx:llmstxt2skill" = "latest"
"pipx:edge-tts" = "latest"

[tools."github:tree-sitter/tree-sitter"]
version = "latest"

[tools."github:tree-sitter/tree-sitter".platforms]
windows-x64 = { asset_pattern = "tree-sitter-windows-x64.gz" }
linux-x64 = { asset_pattern = "tree-sitter-linux-x64.gz" }
macos-arm64 = { asset_pattern = "tree-sitter-macos-arm64.gz" }

{{ if ne .chezmoi.os "windows" }}
"github:sijiaoh/pockode" = "latest"
{{ end }}

[settings]
trusted_config_paths = [
    "~/ghq",
]

[settings.npm]
package_manager = "bun"

