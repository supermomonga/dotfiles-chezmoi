function ghq_list() {
  local repo
  repo=$(ghq list | grep -Ev -- '-worktrees/[^/]+$' | fzf) || return
  cd "$(ghq root)/$repo"
}
alias g="ghq_list"

function git_worktree_list() {
  local select
  local repo
  select=$(git-wt | sed 1d | fzf ) || return
  repo=$(awk '{print $1}' <<< $select)
  cd $repo
}
alias gw="git_worktree_list"


