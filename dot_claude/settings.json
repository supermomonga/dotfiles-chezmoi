{
  "permissions": {
    "allow": [],
    "deny": []
  },
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "curl -d \"ユーザーの許可を求めています\" ntfy.sh/$NTFY_TOPIC"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "curl -d \"ユーザーの応答を待っています\" ntfy.sh/$NTFY_TOPIC"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "curl -d \"タスクが完了しました\" ntfy.sh/$NTFY_TOPIC"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "lua-lsp@claude-plugins-official": true
  },
  "language": "Japanese"
}
