{
  "permissions": {
    "allow": [],
    "deny": []
  },
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "async": true,
            "command": "curl -d \"ユーザーの許可を求めています\" ntfy.sh/$NTFY_TOPIC"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "async": true,
            "command": "curl -d \"ユーザーの応答を待っています\" ntfy.sh/$NTFY_TOPIC"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "async": true,
            "command": "curl -d \"タスクが完了しました\" ntfy.sh/$NTFY_TOPIC"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "dig@kuu-marketplace": true,
    "lua-lsp@claude-plugins-official": true
  },
  "language": "Japanese",
  "model": "opus"
}
